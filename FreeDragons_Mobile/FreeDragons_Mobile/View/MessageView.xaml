<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreeDragons_Mobile.View.MessageView">
  <ContentView.Content>
        <Frame BackgroundColor="DarkGoldenrod" 
               Padding="14" 
               CornerRadius="0" 
               x:Name="MessageFrame"
               VerticalOptions="Fill"
               HorizontalOptions="Fill">
            <StackLayout>
                <Label x:Name="Heading" Text="OverwriteMe" Padding="14" HorizontalTextAlignment="Center" FontSize="Title"></Label>
                <Label x:Name="Content" Text="OverwriteMe"  VerticalOptions="FillAndExpand"  HorizontalTextAlignment="Center">  </Label>
                <Button x:Name="OK" Text="OK" CornerRadius="20" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>